+static bool
+numpy_to_mat4x4_float(PyObject *obj, float mat[4][4])
+{
+	PyArrayObject *a = reinterpret_cast<PyArrayObject *>(obj);
+	if (!PyArray_Check(a) || PyArray_TYPE(a) != NPY_FLOAT)
