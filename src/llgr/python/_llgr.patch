+static bool
+sequence_to_vector_int(PyObject *seq, std::vector<int> *vec)
+{
+	if (!PySequence_Check(seq))
+		return false;
+	Py_ssize_t count = PySequence_Size(seq);
+	vec->reserve(count);
+	for (int i = 0; i < count; ++i) {
+		PyObject *o = PySequence_GetItem(seq, i);
+		if (!PyLong_Check(o)) {
+			Py_XDECREF(o);
+			return false;
+		}
+		int inst = PyLong_AsLong(o);
+		vec->push_back(inst);
+		Py_DECREF(o);
+	}
+	return true;
+}
