<BundleInfo name="ChimeraX-BasicActions" version="0.1"
            package="chimerax.basic_actions" customInit="true"
            minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Basic actions for user-defined specifier names</Synopsis>
  <Description>Manager for user-defined specifier names.

Names are listed and may be used to display, hide or color associated
atoms, cartoons and surfaces.
  </Description>

    <DataFiles>
      <DataFile>lib/*</DataFile>
      <DataFile>basic_actions.*</DataFile>

      <!-- <DataFile></DataFile> -->

    </DataFiles>
  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="General"/>
  </Categories>

<AdditionalPackages/>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.8"/>
    <Dependency name="ChimeraX-UI" version=">=1.0"/>
  </Dependencies>

  <!-- Python and ChimeraX-specific classifiers
       From https://pypi.python.org/pypi?%3Aaction=list_classifiers
       Some Python classifiers are always inserted by the build process.
       These include the Environment and Operating System classifiers
       as well as:
         Framework :: ChimeraX
         Intended Audience :: Science/Research
         Programming Language :: Python :: 3
         Topic :: Scientific/Engineering :: Visualization
         Topic :: Scientific/Engineering :: Chemistry
         Topic :: Scientific/Engineering :: Bio-Informatics
       The "ChimeraX :: Bundle" classifier is also supplied automatically.  -->
  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>ChimeraX :: Tool :: Basic Actions :: General :: show/hide atoms, ribbons and surfaces</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Command :: name :: General :: Define specifier name as a string</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Command :: name frozen :: General :: Define specifier name as atoms in current session matching a string</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Command :: name delete :: General :: Remove user-defined specifier name</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Command :: name list :: General :: List user-defined specifier names</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
