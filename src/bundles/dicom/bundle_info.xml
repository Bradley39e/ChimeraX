<BundleInfo name="ChimeraX-Dicom" version="1.0"
	    package="chimerax.dicom"
  	    customInit="true" minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>Read medical imaging and segmentations in DICOM format</Synopsis>
  <Description>Read medical imaging and segmentations in DICOM format.</Description>

  <Categories>
    <Category name="Volume Data"/>
  </Categories>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.9"/>
    <Dependency name="ChimeraX-Geometry" version=">=1.0"/>
  </Dependencies>

  <Providers manager="data formats">
    <Provider name="DICOM" synopsis="DICOM medical imaging" category="Volume data"
		suffixes=".dcm" allow_directory="true" />
  </Providers>

  <Providers manager="open command">
    <Provider name="DICOM" batch="true" />
  </Providers>

  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>

    <!--
    <ChimeraXClassifier>DataFormat :: DICOM :: :: Volume Data :: .dcm :: :: :: :: :: Medical imaging data</ChimeraXClassifier>
    <ChimeraXClassifier>Open :: DICOM :: :: true</ChimeraXClassifier>
    -->
    
  </Classifiers>

</BundleInfo>
