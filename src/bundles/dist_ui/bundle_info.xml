<BundleInfo name="ChimeraX-Dist_UI" version="1.0" package="chimerax.dist_ui"
  	    customInit="true" minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Distance measurement user interface</Synopsis>
  <Description>Distance measurement tool, mouse mode, and context-menu entry</Description>

  <DataFiles>
    <DataFile>distance.png</DataFile>
  </DataFiles>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="Structure Analysis"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.9"/>
    <Dependency name="ChimeraX-UI" version=">=1.0"/>
    <Dependency name="ChimeraX-MouseModes" version=">=1.0"/>
  </Dependencies>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
  </Classifiers>

</BundleInfo>
