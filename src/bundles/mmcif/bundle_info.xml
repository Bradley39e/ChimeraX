<BundleInfo name="ChimeraX-mmCIF" version="1.0"
	    package="chimerax.atomic.mmcif" purePython="false"
  	    minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>mmCIF format read/write</Synopsis>
  <Description>This bundle provides the abiility to fetch and read Macromolecular CIF files.</Description>

  <Categories>
    <Category name="Molecular structure"/>
  </Categories>

  <CModule name="_mmcif">
    <SourceFile>mmcif_cpp/_mmcif.cpp</SourceFile>
    <SourceFile>mmcif_cpp/mmcif.cpp</SourceFile>
    <SourceFile>mmcif_cpp/template.cpp</SourceFile>
    <IncludeDir>mmcif_cpp/include</IncludeDir>
    <LibraryDir>mmcif_cpp/lib</LibraryDir>
    <Library>atomstruct</Library>
    <Library>element</Library>
    <Library>pyinstance</Library>
    <Library>readcif</Library>
    <Library>logger</Library>
    <Library>arrays</Library>
    <Library>appdirs</Library>
  </CModule>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.1"/>
    <Dependency name="ChimeraX-Atomic" version=">=1.0"/>
  </Dependencies>

  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>ChimeraX :: DataFormat :: mmCIF :: :: Molecular structure :: .cif,.mmcif :: :: http://mmcif.wwpdb.org/ :: :: :: Macromolecular CIF</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Fetch :: pdb :: mmCIF :: pdb :: 1a0m :: true</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Fetch :: pdbe :: mmCIF :: pdbe:: 1a0m :: false</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Fetch :: pdbe_updated :: mmCIF :: pdbe_updated :: 1a0m :: false</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Fetch :: pdbj :: mmCIF :: pdbj :: 1a0m :: false</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Open :: mmCIF :: mmcif :: true :: coordsets:Bool,auto_style:Bool,atomic:Bool,max_models:Int,log_info:Bool</ChimeraXClassifier>
    <ChimeraXClassifier>ChimeraX :: Save :: mmCIF :: mmcif :: true :: models:Models</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
