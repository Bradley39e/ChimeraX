<BundleInfo name="ChimeraX-Open" version="1.0" package="chimerax.open"
            minSessionVersion="1" maxSessionVersion="1">

  <!-- Additional information about bundle source -->
  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <!-- Synopsis is a one-line description
       Description is a full multi-line description -->
  <Synopsis>Manages 'open' command extensibility</Synopsis>
  <Description>Handles 'open' command and manages bundles extending its capabilities</Description>

  <!-- Categories is a list where this bundle should appear -->
  <Categories>
    <Category name="Commands"/>
  </Categories>

  <!-- Dependencies on other ChimeraX/Python packages -->
  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.9"/>
    <Dependency name="ChimeraX-Data_Formats" version=">=1.0"/>
  </Dependencies>

  <Managers>
    <Manager name="open command"/>
  </Managers>

  <Providers manager="open command">
    <Provider type="compression" name="gzip" compression_suffixes=".gz"/>
    <Provider type="compression" name="bz2" compression_suffixes=".bz2"/>
    <Provider type="compression" name="lzma" compression_suffixes=".xz"/>
  </Providers>

  <Classifiers>
    <!-- Development Status should be compatible with bundle version number -->
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
    <ChimeraXClassifier>Command :: open2 :: General :: Open/fetch data files</ChimeraXClassifier>
  </Classifiers>

</BundleInfo>
