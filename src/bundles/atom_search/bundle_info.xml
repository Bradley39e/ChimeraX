<BundleInfo name="ChimeraX-Atom_Search" version="1.0"
            package="chimerax.atomic.search" purePython="false"
            installedIncludeDir="include" installedLibraryDir="lib"
            cython="true" cythonInclude="search_cpp"
            minSessionVersion="1" maxSessionVersion="1">

  <Author>UCSF RBVI</Author>
  <Email>chimerax@cgl.ucsf.edu</Email>
  <URL>https://www.rbvi.ucsf.edu/chimerax/</URL>

  <Synopsis>3D atom search</Synopsis>
  <Description>Quickly search 3D space for atom within a certain distance of another atom or a xyz point.</Description>

  <Categories>
    <Category name="Structure Analysis"/>
  </Categories>

  <DataFiles>
    <DataFile>lib/*</DataFile>
  </DataFiles>

  <CLibrary name="atom_search">
    <SourceFile>search_cpp/search.cpp</SourceFile>
    <Library>atomstruct</Library>
  </CLibrary>

  <CModule name="ast">
    <SourceFile>search_cpp/ast.pyx</SourceFile>
    <LibraryDir>src/lib</LibraryDir>
    <Library>atom_search</Library>
    <Library>atomstruct</Library>
  </CModule>

  <Dependencies>
    <Dependency name="ChimeraX-Core" version=">=0.8"/>
    <Dependency name="ChimeraX-Atomic" version=">=1.0"/>
  </Dependencies>

  <Classifiers>
    <PythonClassifier>Development Status :: 2 - Pre-Alpha</PythonClassifier>
    <PythonClassifier>License :: Free for non-commercial use</PythonClassifier>
  </Classifiers>

</BundleInfo>
